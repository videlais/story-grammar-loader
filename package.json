{
  "name": "story-grammar-loader",
  "version": "1.0.0",
  "description": "JSON Loader for Story Grammar",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:webpack": "webpack",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist types",
    "prepublishOnly": "npm run clean && npm run build",
    "all": "npm run clean && npm run build && npm run build:webpack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videlais/story-grammar-loader.git"
  },
  "keywords": [
    "story-grammar",
    "json-loader",
    "narrative",
    "procedural-generation",
    "typescript",
    "rules-engine"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/videlais/story-grammar-loader/issues"
  },
  "homepage": "https://github.com/videlais/story-grammar-loader#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "story-grammar": "^1.0.2"
  }
}
